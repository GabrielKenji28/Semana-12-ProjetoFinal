@using Infra.Object
@model IEnumerable<ParticipanteModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="bootstrap-5.3.0-alpha1-dist/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/style.css">
    <title>Document</title>

</head>
<body>

    <h1>Seleção dos Participantes</h1>
    <hr />
    <div class="container-fluid">
        <div class="row">
            @foreach (var participante in Model)
            {
                <div id="card-@participante.ParticipanteId" class="col card-inteiro" onclick="selecionarCard(@participante.ParticipanteId)">
                    <div class="frame11">
                        <div class="nomeLutador">
                            @participante.Nome
                        </div>
                        <div class="frame12">
                            <div class="fotoLutador">
                                <img src="imagens/neymar.jfif">
                            </div>
                            <div class="frame9">
                                <div class="idade">
                                    <p>Idade: @participante.Idade</p>
                                </div>
                                <div class="placar">
                                    <p>Placar: @participante.Vitorias V - @participante.Derrotas D</p>
                                </div>
                                <div class="frame10">
                                    <div class="titulos">
                                        <p>Gols: @participante.Gols </p>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            }

        </div>
    </div>

    
    <form class="d-grid gap-2">
        <button id="botaoIniciaTorneio" type="button" onclick="enviarSelecionar()" class="btn btn-primary botaoIniciaTorneio btn-lg">Batalhar</button>
    </form>

    

</body>
</html>

@Html.Hidden("UrlMetodoParaChamar", Url.Action("EnviaParticipantes", "NewViews"))
<script src="~/js/script.js"></script>
